# Social Media Automation Platform - Backend Environment Variables

# Database Configuration
MONGO_URL=mongodb://localhost:27017/socialmedia_automation

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please-make-it-very-long-and-random
JWT_ALGORITHM=HS256

# Redis Configuration (for Celery and caching)
REDIS_URL=redis://localhost:6379

# API Keys (will be configured in later phases)
OPENAI_API_KEY=your-openai-api-key-here
GROQ_API_KEY=your-groq-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Social Media API Keys (Phase 4)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
YOUTUBE_API_KEY=your-youtube-api-key
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Ollama Configuration (Phase 2)
OLLAMA_BASE_URL=http://localhost:11434

# Voice Processing (Phase 8)
WHISPER_API_KEY=your-whisper-api-key
TTS_SERVICE_URL=http://localhost:5000

# Email Configuration (for user verification)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password

# Environment
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Subscription & Billing (for future phases)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret